<div class="container_12 pages">
<div class="grid_12 alpha omega">
	<article>
		<h1>
		Currently opened vacancies
		</h1>
  <div id="vacancies">
    <% @vacancies.each do |vacancy| %>
      <div class="description_direction">
	      <div class="wrapper">
        <h2 class="title"><%=vacancy.title %></h2>
		    <%=raw vacancy.description %>
		    <a class="more" href="/vacancies/<%= vacancy.title %>">Read more</a>
		    <div class="clear"></div>
		    <br/>
		    </div>
		     <br/>
      </div>
    <% end %>
  </div>

	</article>
</div>
</div>
