<ul>
  <% if Admin::AboutPagesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_about_pages_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_about_page_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::AboutPagesController.sortable? and AboutPage.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "About Pages"),
                 admin_about_pages_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "About Pages"),
                 admin_about_pages_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>