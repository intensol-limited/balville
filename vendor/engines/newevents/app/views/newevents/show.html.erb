<% content_for :body_content_title do %>
  <%= @newevent.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @newevent.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @newevent.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @newevent.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Text1</h1>
    <p>
      <%=raw @newevent.text1 %>
    </p>
  </section>
  <section>
    <h1>Text2</h1>
    <p>
      <%=raw @newevent.text2 %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="newevents">
      <% @newevents.each do |newevent| %>
        <li>
          <%= link_to newevent.title, newevent_path(newevent) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
