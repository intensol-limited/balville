<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(about_page) -%>">
  <span class='title'>
    <%= about_page.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), about_page_path(about_page),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_about_page_path(about_page),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_about_page_path(about_page),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => about_page.title),
        :method => :delete %>
  </span>
</li>
