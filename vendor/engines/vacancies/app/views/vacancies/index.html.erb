<div class="container_12 pages">
<div class="grid_12 alpha omega">
	<article>
		<h1>
		Currently opened vacancies
		</h1>
		  <div id="vacancies">
	  
		    <% @vacancies.each_with_index do |vacancy, index| %>
		      <div class="description_direction vacancies grid_4 <% if [0, 3, 6].include?(index) then %>alpha<% end %> <% if [2, 5, 7].include?(index) then %>omega<% end %>">
			      <div class="wrapper">
			      <%#= image_fu project.illustration, nil, :width=>"289", :height=>"170" %>
		        <h2><a href="/vacancies/<%= vacancy.title %>"><%= vacancy.title %></a></h2>
				      <%=raw vacancy.description %>
				      <a href="/vacancies/<%= vacancy.title %>" class="more">more</a>
		        </div>
		      </div>
		    <% end %>
		  </div>
		</article>
</div>
</div>