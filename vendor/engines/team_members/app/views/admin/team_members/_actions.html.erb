<ul>
  <% if Admin::TeamMembersController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_team_members_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_team_member_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::TeamMembersController.sortable? and TeamMember.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Team Members"),
                 admin_team_members_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Team Members"),
                 admin_team_members_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>